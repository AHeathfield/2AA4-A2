<?xml version="1.0" encoding="UTF-8"?>
<!-- "INFO" to enable -->
<Configuration status="OFF">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %logger{0} %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <!-- "info" to enable -->
        <Root level="OFF">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>